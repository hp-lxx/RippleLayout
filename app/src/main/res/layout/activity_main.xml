<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.ywg.ripplelayout.RippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#ffff00"
        app:rl_rippleAlpha="0.2"
        app:rl_rippleColor="#585858"
        app:rl_rippleDelayClick="false"
        app:rl_rippleHover="true"
        app:rl_rippleOverlay="true">

        <Button
            android:id="@+id/btn_ripple1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_btn"
            android:text="Overlay with hover"/>

    </com.ywg.ripplelayout.RippleLayout>


    <Button
        android:id="@+id/btn_ripple2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_btn"
        android:text="Ripples static init"/>

</LinearLayout>